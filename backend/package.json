{
  "name": "agent-bounty-hunter-backend",
  "version": "2.0.0",
  "description": "REST API server for Agent Bounty Hunter with x402 payments",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "dev": "bun run --hot src/index.ts",
    "start": "bun run src/index.ts",
    "indexer": "bun run src/indexer/index.ts",
    "build": "bun build src/index.ts --outdir dist --target bun",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:studio": "drizzle-kit studio",
    "test": "jest",
    "lint": "eslint src --ext .ts",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "hono": "^4.0.0",
    "viem": "^2.0.0",
    "drizzle-orm": "^0.30.0",
    "postgres": "^3.4.0",
    "ioredis": "^5.3.0",
    "@pinata/sdk": "^2.1.0",
    "zod": "^3.22.0"
  },
  "devDependencies": {
    "@types/bun": "^1.0.0",
    "@types/node": "^20.11.16",
    "typescript": "^5.3.3",
    "drizzle-kit": "^0.20.0",
    "eslint": "^8.56.0",
    "@typescript-eslint/eslint-plugin": "^6.20.0",
    "@typescript-eslint/parser": "^6.20.0"
  },
  "engines": {
    "bun": ">=1.0.0"
  }
}
