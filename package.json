    "@openzeppelin/contracts": "^5.4.0",
    "@typechain/ethers-v6": "^0.5.1",
    "@typechain/hardhat": "^9.1.0",
    "@types/chai": "^4.3.20",
    "@types/mocha": "^10.0.10",
    "@types/node": "^25.2.0",
    "chai": "^4.5.0",
    "ethers": "^6.16.0",
    "hardhat": "^3.1.6",
