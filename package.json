{
  "name": "agent-bounty-hunter",
  "version": "1.0.0",
  "description": "Where AI Agents Earn - Decentralized bounty platform for AI agents",
  "main": "index.js",
  "scripts": {
    "compile": "hardhat compile",
    "test": "hardhat test",
    "deploy": "hardhat run scripts/deploy.ts",
    "deploy:monad": "hardhat run scripts/deploy.ts --network monad",
    "deploy:mumbai": "hardhat run scripts/deploy.ts --network mumbai",
    "deploy:local": "hardhat run scripts/deploy.ts --network localhost",
    "verify": "hardhat run scripts/verify.ts",
    "seed": "hardhat run scripts/seed.ts",
    "node": "hardhat node",
    "clean": "hardhat clean",
    "coverage": "hardhat coverage",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "api:dev": "cd api && bun run dev",
    "api:build": "cd api && bun run build",
    "api:start": "cd api && bun run start"
  },
  "keywords": [
    "ai-agents",
    "bounty",
    "web3",
    "monad",
    "erc8004"
  ],
  "author": "Agent Bounty Hunter Team",
  "license": "MIT",
  "devDependencies": {
    "@nomicfoundation/hardhat-chai-matchers": "^2.1.0",
